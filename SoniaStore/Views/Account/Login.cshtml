@model SoniaStore.ViewModels.LoginVM

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

<div class="container">
    <div class="d-flex justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header">
                    <h3 class="text-center font-weight-light my-4">Login</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" hidden></div>
                        <input type="hidden" asp-for="UrlRetorno" />
                        <div class="form-floating mb-3">
                            <input class="form-control" asp-for="Email" />
                            <label asp-for="Email"></label>
                            <span asp-validation-for="Email" class="text-danger text-sm"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input class="form-control" asp-for="Senha" />
                            <label asp-for="Senha"></label>
                            <span asp-validation-for="Senha" class="text-danger text-sm"></span>
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="Lembrar" type="checkbox" value="" />
                            <label class="form-check-label" asp-for="Lembrar">Lembrar</label>
                        </div>
                        <div class="d-flex flex-column align-items-center justify-content-center mt-4 mb-0">
                            <button type="submit" class="btn btn-primary w-100">Entrar</button>
                            <a class="small" href="password.html">Esqueceu sua Senha?</a>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <div class="small">Novo por aqui? <a href="register.html">Crie sua conta</a></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial.cshtml" />
    <script type="text/javascript">
        let mensagemErro = '';
        $(".validation-summary-errors ul li").each(function () {
            mensagemErro += $(this).text() + '<br />';
        });
        if (mensagemErro != '') {
            Swal.fire({
                icon: 'error',
                title: 'Acesso Negado',
                html: mensagemErro,
                icon: "error"
            });
        }
    </script>
}
